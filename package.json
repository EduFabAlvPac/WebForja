{
  "name": "forja-digital-ae",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "dev:no-ssl": "node dev-no-ssl.js",
    "build": "next build",
    "build:no-ssl": "set NODE_TLS_REJECT_UNAUTHORIZED=0 && next build",
    "start": "next start",
    "lint": "next lint",
    "analyze": "ANALYZE=true next build",
    "qa:links": "ts-node scripts/qa-links.ts",
    "qa:links:prod": "ts-node scripts/qa-links.ts production",
    "typecheck": "tsc --noEmit",
    "new:interest": "ts-node --esm scripts/new-interest.ts",
    "validate": "npm run typecheck && npm run lint",
    "validate:full": "npm run typecheck && npm run lint && npm run build",
    "deploy": "node scripts/deploy.js",
    "deploy:check": "node scripts/deploy-check.js",
    "audit:deps": "npx depcheck",
    "audit:bundle": "ANALYZE=true next build"
  },
  "dependencies": {
    "@hookform/resolvers": "^3.3.0",
    "@radix-ui/react-accordion": "^1.1.2",
    "@radix-ui/react-dialog": "^1.1.15",
    "@radix-ui/react-dropdown-menu": "^2.0.6",
    "@radix-ui/react-hover-card": "^1.0.7",
    "@radix-ui/react-label": "^2.0.2",
    "@radix-ui/react-progress": "^1.1.8",
    "@radix-ui/react-select": "^2.0.0",
    "@radix-ui/react-separator": "^1.1.8",
    "@radix-ui/react-slot": "^1.2.4",
    "@radix-ui/react-tabs": "^1.1.13",
    "@radix-ui/react-toast": "^1.2.15",
    "@radix-ui/react-tooltip": "^1.2.8",
    "@vercel/analytics": "^1.5.0",
    "@vercel/speed-insights": "^1.2.0",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.0",
    "framer-motion": "^11.0.0",
    "lucide-react": "^0.300.0",
    "next": "^14.2.0",
    "react": "^18.3.0",
    "react-dom": "^18.3.0",
    "react-hook-form": "^7.51.0",
    "tailwind-merge": "^2.2.0",
    "zod": "^3.23.0"
  },
  "devDependencies": {
    "@tailwindcss/typography": "^0.5.10",
    "tailwindcss": "^3.4.0",
    "typescript": "^5.4.0",
    "@types/node": "^20.0.0",
    "@types/react": "^18.3.0",
    "@types/react-dom": "^18.3.0",
    "autoprefixer": "^10.4.0",
    "eslint": "^8.0.0",
    "eslint-config-next": "^14.2.0",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "postcss": "^8.4.0",
    "tailwindcss-animate": "^1.0.7",
    "ts-node": "^10.9.2"
  }
}
